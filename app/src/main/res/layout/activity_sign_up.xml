<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".screen.SignUpActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200sp"
        android:layout_height="170sp"
        android:layout_gravity="center"
        android:src="@drawable/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Experiencing with"
        android:fontFamily="@font/fredoka_regular"
        android:textColor="@color/xamD"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="POLYPET"
        android:textColor="@color/camC"
        android:fontFamily="@font/fredoka_bold"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="24sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="24sp"
        android:background="@drawable/bg_edt"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10sp"
        android:hint="Your name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="24sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="24sp"
        android:background="@drawable/bg_edt"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="10sp"
        android:hint="Email Address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="24sp"
        android:background="@drawable/bg_edt"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10sp"
        android:hint="Passwords"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_repeatpassword"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:background="@drawable/bg_edt"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10sp"
        android:hint="Repeat passwords"
        android:textSize="20sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="24sp"
        android:background="@drawable/border_cam_btn"
        android:text="Create account"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64sp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Do You have an account?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:text="Sign in"
            android:textColor="@color/camC"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>