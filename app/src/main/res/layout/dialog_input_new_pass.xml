<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500sp"
    android:orientation="vertical"
    android:background="@drawable/background_boder_top_lr"
    android:gravity="center"
    android:padding="16dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nhập mật khẩu mới"
        android:textColor="@color/camC"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"/>


        <EditText
            android:layout_marginTop="20sp"
            android:hint="Nhập mật khẩu mới"
            android:id="@+id/edt_passnew"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/bg_edt"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_re_passnew"
            android:hint="Nhập lại mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edt"
            android:textSize="18sp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_load_new_pass"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/border_cam_btn"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>